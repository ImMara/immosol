extends ../layout

block content
    div(class="container")
        div(class="m-0 p-0 d-flex")
            div(class="w-25 mt-5")
                a(class="btn btn-outline-success m-2" href="/utilisateurs/create") Ajouter un utilisateur
            div(class="w-75")
                h2(class="mt-5")
                    i(class="fas fa-users-cog me-2")
                    .
                        Lise des utilsateurs
                table(class="table mt-5 w-100")
                    thead
                        tr
                            th(scope="col") #
                            th(scope="col") pseudo
                            th(scope="col" class="w-50") email
                            th(scope="col") actions
                    tbody
                        each user ,key  in users
                            tr
                                th(scope="row")= key+1
                                td= user.username
                                td= user.local.email
                                td
                                    a(class="btn btn-danger") delete