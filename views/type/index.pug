extends ../layout
block content
    .container
        h2(class="mt-5 mb-5") Cr√©er un nouveau type de bien

        form(method='post' action="/type/create")
            div(class="mb-3")
                label(class="form-label") Label
                input(class="form-control" name="title" type="text")
            button(class="btn btn-primary") Enregistrer
        div(class="row mt-5 mx-2")
            each type in types
                div(class="col-6 mb-2 mt-2 border rounded-2 d-flex align-items-center")= type.title
                div(class="col-6 mb-2 mt-2")
                    a(class="btn btn-danger" href="/type/delete/"+type._id) X