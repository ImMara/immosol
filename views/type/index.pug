extends ../layout
block content
    .container
        if message
            div(class="toast align-items-center text-white bg-success border-0 w-100" role="alert" aria-live="polite" aria-atomic="true")
                div(class="d-flex mt-5")
                    div(class="toast-body")= message
                    button(type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close")
        h2(class="mt-5 mb-5") Cr√©er un nouveau type de bien
        form(method='post' action="/type/create")
            div(class="mb-3")
                label(class="form-label") Label
                input(class="form-control" maxLength="100" minLength="3" name="title" type="text")
            button(class="btn btn-primary") Enregistrer
        div(class="row mt-5 mx-2")
            each type in types
                div(class="col-6 mb-2 mt-2 border rounded-2 d-flex align-items-center")= type.title
                div(class="col-6 mb-2 mt-2")
                    a(class="btn btn-danger" href="/type/delete/"+type._id) X
    script.
        var myAlert = document.querySelector('.toast');//select id of toast
        var bsAlert = new bootstrap.Toast(myAlert, {autohide: false});//inizialize it
        bsAlert.show();//show it