extends ../layout
block content
    .container
        form(class="mt-5" action="/compte/"+currentUser._id method='post')
            div(class="mb-3")
                label(class="form-label") pseudo
                input(type="text" name="username" class="form-control" value=currentUser.username)

            div(class="mb-3")
                label(class="form-label") E-mail
                input(type="email" name="email" class="form-control" value=currentUser.local.email)
            div(class="mb-3")
                label(class="form-label") mot de passe
                input(type="password" autocomplete="off" name="password" class="form-control" placeholder="•••••••••••••••••••••")
            div(class="mb-3")
                button(class="btn btn-primary") sauvegarder
